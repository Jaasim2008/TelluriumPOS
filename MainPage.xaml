<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelluriumPOS.MainPage"
             xmlns:viewmodel="clr-namespace:TelluriumPOS.ViewModels"
             x:DataType="viewmodel:MainViewModel">
    <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, *">
        <!-- Image Source: https://wallpaperswide.com/aero_stream_purple-wallpapers.html -->
        <Image Grid.RowSpan="3" Grid.ColumnSpan="2" Source="background.jpg" Aspect="AspectFill"></Image>
        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="terminal.png" WidthRequest="64"></Image>
            <Button Command="{Binding goToTerminalCommand}" Text="Terminal" VerticalOptions="Center" TextColor="White"  FontSize="32" Padding="10"></Button>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="0" Grid.Column="1" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="database.png" WidthRequest="64"></Image>
            <Label Text="Database" VerticalOptions="Center" TextColor="White"  FontSize="32"></Label>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="inventory.png" WidthRequest="64"></Image>
            <Button Command="{Binding goToInventoryCommand}" Text="Inventory" VerticalOptions="Center" TextColor="White"  FontSize="32" Padding="10"></Button>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="analytics.png" WidthRequest="64"></Image>
            <Label Text="Analytics" VerticalOptions="Center" TextColor="White"  FontSize="32"></Label>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="settings.png" WidthRequest="64"></Image>
            <Button Command="{Binding goToSettingsCommand}" Text="Settings" VerticalOptions="Center" TextColor="White"  FontSize="32" Padding="10"></Button>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="2" Grid.Column="1" VerticalOptions="Center" Spacing="12" HorizontalOptions="Center">
            <Image Source="debugger.png" WidthRequest="64"></Image>
            <Button Command="{Binding goToDebuggerCommand}" Text="Debugger" VerticalOptions="Center" TextColor="White"  FontSize="32"  Padding="10"></Button>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
