<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TelluriumPOS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TelluriumPOS"
    Title="TelluriumPOS"
    BackgroundColor="{StaticResource Tertiary}">
    
    
    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent 
        Title="Terminal"
        ContentTemplate="{DataTemplate local:TerminalPage}"
        Route="TerminalPage"/>
    <ShellContent 
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="SettingsPage"/>
    <ShellContent 
        Title="Debugger"
        ContentTemplate="{DataTemplate local:DebuggerPage}"
        Route="DebuggerPage"/>
    <ShellContent 
        Title="Inventory"
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="InventoryPage"/>

</Shell>
